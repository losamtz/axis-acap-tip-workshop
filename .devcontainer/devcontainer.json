{
  "name": "ACAP Native (aarch64)",
  "build": {
    "dockerfile": "Dockerfile",
    "args": { "ARCH": "aarch64" }
  },
  "containerEnv": {
    "SDKTARGETSYSROOT": "/opt/axis/acapsdk/sysroots/aarch64"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools-extension-pack",
        "ms-vscode.makefile-tools",
        "ms-azuretools.vscode-docker"
      ]
    }
  }
}
